{
  "name": "opendeck-ui",
  "description": "Configuration utility for OpenDeck MIDI platform",
  "main": "main.js",
  "version": "0.1.4",
  "private": true,
  "files": [
    "main.js",
    "dist/**"
  ],
  "engines": {
    "node": ">=10.16.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wyrdcode/opendeck-ui.git"
  },
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 3004 --strictPort",
    "build": "vite build",
    "preview": "python3 -m http.server 4173 --directory dist --bind 0.0.0.0",
    "gen:icon": "python3 scripts/gen_icon.py",
    "format": "prettier --config .prettierrc --write --parser typescript \"src/**/*.ts\"",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "start": "electron .",
    "electron:dev": "concurrently -k \"npm run dev\" \"wait-on http://127.0.0.1:3004 && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:3004 electron .\"",
    "electron:dev:container": "concurrently -k \"npm run dev\" \"wait-on http://127.0.0.1:3004 && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:3004 electron --no-sandbox .\"",
    "pack": "npm run build && electron-builder --dir",
    "dist:linux": "npm run build && electron-builder --linux AppImage",
    "dist:linux:portable": "npm run build && electron-builder --linux tar.gz",
    "dist:win": "npm run build && electron-builder --win nsis",
    "dist:win:portable": "npm run build && electron-builder --win zip",
    "dist:win:exe": "npm run build && electron-builder --win portable",
    "dist:all": "npm run build && electron-builder -wl"
  },
  "dependencies": {
    "@tailwindcss/ui": "^0.5.0",
    "@vue/eslint-config-typescript": "^5.1.0",
    "body-scroll-lock": "^3.0.3",
    "file-saver": "^2.0.2",
    "lodash-es": "^4.17.15",
    "marked": "^1.1.1",
    "semver": "^7.3.2",
    "tailwindcss": "^1.7.3",
    "vue": "^3.0.0",
    "vue-router": "^4.0.0-beta.7",
    "webmidi": "^2.5.1"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.1",
    "@types/lodash-es": "^4.17.3",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-prettier-vue": "^2.1.0",
    "eslint-plugin-vue": "^7.0.0-beta.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.5",
    "typescript": "^3.9.3",
    "vite": "^1.0.0-rc.3",
    "vue-eslint-parser": "^7.1.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "wait-on": "^7.2.0",
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.dolsoidduk.midisaxo",
    "productName": "Midisaxo",
    "files": [
      "main.js",
      "dist/**"
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "portable": {
      "artifactName": "${productName}-${version}.${ext}"
    },
    "nsis": {
      "artifactName": "${productName}-${version}-setup.${ext}"
    },
    "win": {
      "icon": "assets/icon.ico",
      "signAndEditExecutable": false,
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ],
      "icon": "assets/icon.png",
      "artifactName": "${productName}-${version}.${ext}",
      "category": "Audio"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --parser=typescript --write"
    ]
  }
}
